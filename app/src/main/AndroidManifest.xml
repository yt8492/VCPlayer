<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jp.kaken.musicplayer">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AlbumListActivity" />
        <activity
            android:name=".TrackListActivity"
            android:label="@string/title_activity_track_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MusicPlayerActivity"
            android:label="@string/title_activity_music_player"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".VcPlayActivity"
            android:label="@string/title_activity_vc_play"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>